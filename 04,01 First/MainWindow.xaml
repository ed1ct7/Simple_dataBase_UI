<Window x:Class="_04_01_First.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_01_First"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800"
        ResizeMode="NoResize"
        >
    <Window.Resources>
        <Style TargetType="Button" x:Key="BS">
            <Setter Property="FontSize" Value="21"></Setter>
            <Setter Property="Margin" Value="20,0"></Setter>
            <Setter Property="Background" Value="DimGray"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style TargetType="TextBox" x:Key="TS">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Margin" Value="60,0"></Setter>
            <Setter Property="Background" Value="DimGray"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="TBS">
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Margin" Value="0,10,0,0"></Setter>
            <Setter Property="Background" Value="DimGray"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Background="Beige" 
                Grid.Column="0" >
            <Border Background="DimGray" Margin="40,10,40,0"
                    CornerRadius="15"
                    >
            <StackPanel >

                    <TextBlock Style="{StaticResource TBS}"
                               Background="Gray"
                               Margin="0,15,0,0"
                               Height="30"
                               TextAlignment="Center"
                               
                               >Simple DataBase UI
                    </TextBlock>
                <TextBlock Style="{StaticResource TBS}">Author</TextBlock>
                <TextBox Style="{StaticResource TS}" x:Name="TB_Author"></TextBox>
                <TextBlock Style="{StaticResource TBS}">Book</TextBlock>
                <TextBox Style="{StaticResource TS}" x:Name="TB_Book"></TextBox>
                <TextBlock Style="{StaticResource TBS}">Count Page</TextBlock>
                <TextBox Style="{StaticResource TS}" x:Name="TB_CountPage"></TextBox>
                <Button Style="{StaticResource BS}" Margin="0,10,0,0"
                        BorderBrush="Gray"
                        Click="AddButton_Click"
                        >Add</Button>

                <TextBlock x:Name="TB_Status" Style="{StaticResource TBS}" Margin="0,10,0,0">></TextBlock>

                <Button Style="{StaticResource BS}" Click="CreateButton_Click">Create</Button>
                <Button Style="{StaticResource BS}" Click="ConnectButton_Click">Connect</Button>
                <Button Style="{StaticResource BS}" Click="ReadAllButton_Click">ReadAll</Button>
            </StackPanel>
            </Border>
        </Border>
        <DataGrid Grid.Column="1"
                 x:Name="dbView" 
                  ></DataGrid>
    </Grid>
</Window>
