<Window x:Class="_04_01_First.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_01_First"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button" x:Key="BS">
            <Setter Property="FontSize" Value="21"></Setter>
            <Setter Property="Margin" Value="60,5"></Setter>
            <Setter Property="Background" Value="DimGray"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style TargetType="TextBox" x:Key="TS">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Margin" Value="60,0"></Setter>
            <Setter Property="Background" Value="DimGray"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="TBS">
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Margin" Value="60,10,60,0"></Setter>
            <Setter Property="Background" Value="DimGray"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Background="Beige" 
                Grid.Column="0" >
            <StackPanel >

                <Button Style="{StaticResource BS}" Margin="40,10,40,0">Add</Button>
                <TextBlock Style="{StaticResource TBS}">Author</TextBlock>
                <TextBox Style="{StaticResource TS}" x:Name="Author_ComboBox"></TextBox>
                <TextBlock Style="{StaticResource TBS}">Book</TextBlock>
                <TextBox Style="{StaticResource TS}" x:Name="Book_ComboBox"></TextBox>
                <TextBlock Style="{StaticResource TBS}">Count Page</TextBlock>
                <TextBox Style="{StaticResource TS}" x:Name="CountPage_ComboBox"></TextBox>

                <TextBlock Style="{StaticResource TBS}" Margin="40,10,40,20">></TextBlock>

                <Button Style="{StaticResource BS}" Click="CreateButton_Click">Create</Button>
                <Button Style="{StaticResource BS}" Click="ConnectButton_Click">Connect</Button>
                <Button Style="{StaticResource BS}" Click="ReadAllButton_Click">ReadAll</Button>
            </StackPanel>
        </Border>
        <TabPanel Grid.Column="1"></TabPanel>
    </Grid>
</Window>
